<form action="/add" method="post">
  <span class="form-title">ADD BOOKS</span>
  <div class="title">
    <span>제목</span>
    <input type="text" name="title" required />
  </div>
  <div class="subtitle">
    <span>부제목</span>
    <input type="text" name="subtitle" />
  </div>
  <div class="author">
    <span>작가</span>
    <input type="text" name="author" />
  </div>
  <div class="date">
    <span>출판연도</span>
    <input type="month" name="date" />
  </div>
  <div class="publish">
    <span>출판사</span>
    <input type="text" name="publish" />
  </div>
  <div class="category">
    <span>분류</span>
    <select name="category" id="category">
      <option value="GENERAL MUSICOLOGY">GENERAL MUSICOLOGY</option>
      <option value="HISTORY AND BIOGRAPHY">HISTORY AND BIOGRAPHY</option>
      <option value="MUSIC AND CULTURE">MUSIC AND CULTURE</option>
      <option value="MUSIC THEORY">MUSIC THEORY</option>
      <option value="ESSENTIAL REFERENCES">ESSENTIAL REFERENCES</option>
    </select>
  </div>
  <div class="img">
    <span>이미지</span>
    <input type="url" name="img" />
  </div>
  <div class="purchase">
    <span>구매처</span>
    <input type="url" name="purchase" />
  </div>
  <div class="about">
    <span>상세정보</span>
    <textarea name="about" id="about" cols="30" rows="10"></textarea>
  </div>
  <div class="submit">
    <input type="submit" name="submit" class="add-submit" />
  </div>
  <input type="number" name="like" style="display: none" />
</form>
