<form action="/edit?_method=PUT" method="post">
  <span class="form-title">EDIT BOOKS</span>
  <input type="text" name="id" value="<%= books._id %>" style="display: none" />
  <div class="title">
    <span>제목</span>
    <input type="text" name="title" value="<%= books.제목 %>" />
  </div>
  <div class="subtitle">
    <span>부제목</span>
    <input type="text" name="subtitle" value="<%= books.부제목 %>" />
  </div>
  <div class="author">
    <span>작가</span>
    <input
      class="disable"
      type="text"
      name="author"
      value="<%= books.작가 %>"
    />
  </div>
  <div class="date">
    <span>출판연도</span>
    <input type="month" name="date" value="<%= books.연도 %>" />
  </div>
  <div class="publish">
    <span>출판사</span>
    <input type="text" name="publish" value="<%= books.출판사 %>" />
  </div>
  <div class="category">
    <span>분류</span>
    <select name="category" id="category">
      <option value="GENERAL MUSICOLOGY" selected="">GENERAL MUSICOLOGY</option>
      <option value="HISTORY AND BIOGRAPHY">HISTORY AND BIOGRAPHY</option>
      <option value="MUSIC AND CULTURE">MUSIC AND CULTURE</option>
      <option value="MUSIC THEORY">MUSIC THEORY</option>
      <option value="ESSENTIAL REFERENCES">ESSENTIAL REFERENCES</option>
    </select>
  </div>
  <div class="img">
    <span>이미지</span>
    <input type="url" name="img" value="<%= books.이미지 %>" />
  </div>
  <div class="about">
    <span>상세정보</span>
    <textarea name="about" id="about" cols="30" rows="10">
<%= books.상세정보 %></textarea
    >
  </div>

  <div class="submit">
    <input type="submit" name="submit" class="edit-submit" />
  </div>
</form>
